<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="glavweb_dropzone_uploader.twig.uploader_extension.class">Glavweb\UploaderDropzoneBundle\Twig\Extension\UploaderDropzoneExtension</parameter>
    </parameters>

    <services>

        <service id="glavweb_uploader.form.type.dropzone" class="Glavweb\UploaderDropzoneBundle\Form\Type\DropzoneType">
            <argument type="service" id="router" />
            <argument type="service" id="oneup_uploader.templating.uploader_helper" />
            <argument>%oneup_uploader.config%</argument>
            <argument type="service" id="glavweb_uploader.data_driver.annotation" />
            <argument type="service" id="translator" />
            <tag name="form.type" />
        </service>

        <service id="dropzone.upload_listener" class="Glavweb\UploaderDropzoneBundle\EventListener\UploadListener">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="glavweb_uploader.model_manager.orm" />
            <tag name="kernel.event_listener" event="oneup_uploader.pre_upload" method="preUpload" />
            <tag name="kernel.event_listener" event="oneup_uploader.post_upload" method="postUpload" />
        </service>

        <service id="glavweb_oneup_uploader.uploader_manager" class="Glavweb\UploaderDropzoneBundle\Manager\UploaderManager">
            <argument>%oneup_uploader.config%</argument>
            <argument>%glavweb_uploader.config%</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setModelManager">
                <argument type="service" id="glavweb_uploader.model_manager.orm" />
            </call>
        </service>

        <service id="glavweb_uploader.model_manager.orm" class="Glavweb\UploaderDropzoneBundle\Manager\OrmModelManager">
            <argument type="service" id="doctrine" />
        </service>

        <service id="glavweb_uploader.media_listener" class="Glavweb\UploaderBundle\Entity\Listener\MediaListener">
            <argument type="service" id="glavweb_oneup_uploader.uploader_manager" />
            <tag name="doctrine.orm.entity_listener" />
        </service>

        <service id="glavweb_dropzone_uploader.twig.uploader_extension" class="%glavweb_dropzone_uploader.twig.uploader_extension.class%">
            <tag name="twig.extension" />
        </service>
    </services>
</container>
